<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sex"
                android:id="@+id/textView5"
                android:textColor="@color/white"
                android:layout_marginLeft="6dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_male"
                    android:buttonTint="@color/gray_text"
                    android:id="@+id/genderMaleCheckBox"
                    android:textColor="@color/gray_text"
                    android:layout_weight="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_female"
                    android:buttonTint="@color/gray_text"
                    android:textColor="@color/gray_text"
                    android:id="@+id/genderFemaleCheckBox"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_activity"
                android:buttonTint="@color/gray_text"
                android:textColor="@color/white"
                android:id="@+id/textView4"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:text="@string/label_online"
                android:buttonTint="@color/gray_text"
                android:id="@+id/onlineCheckBox"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_additional"
                android:textColor="@color/white"
                android:id="@+id/textView_additional"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:buttonTint="@color/gray_text"
                android:text="@string/label_only_with_photo"
                android:id="@+id/photoCheckBox"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>